{
    "author": "Bad-Wolf-Developpement",
    "content_scripts": [
      {
        "css": [
          "css/extension.css"
        ],
        "js": [
          "js/extension.js"
        ]
      }
    ],
    "description": "Sinope",
    "gateway_specific_settings": {
      "webthings": {
        "exec": "python3 {path}/main.py",
        "primary_type": "extension",
        "strict_max_version": "*",
        "strict_min_version": "0.10.0"
      }
    },
    "homepage_url": "https://github.com/Bad-Wolf-developpement/sinope-outside-temperature",
    "id": "sinope-out-temp",
    "license": "MIT",
    "manifest_version": 1,
    "name": "Sinope",
    "options": {
        "default":{
          "mqtt_server": "localhost",
          "mqtt_port": 1883,
          "mqtt_username": "",
          "mqtt_password": "",
          "debug_mode": false,
          "api_key":""
        },
        "schema":{
           "type": "object",
           "required":[
                "mqtt_server",
                "mqtt_port",
                "api_key"
           ],
           "properties":{
               "mqtt_server":{
                    "type": "string",
                    "title": "Server name or ip",
                    "description": "Mqtt Server name or ip address"
               },
               "mqtt_port":{
                   "type":"number",
                   "title": "Mqtt Port",
                   "description": "Port of the Mqtt server"
               },
               "mqtt_username":{
                   "type": "string",
                   "title": "Mqtt username",
                   "description": "Username for the Mqtt server, leave empty if none"
               },
               "mqtt_password":{
                   "type": "string",
                   "title": "Mqtt Password",
                   "description": "password for Mqtt server, leave empty if none"
               },
                "api_key":{
                    "type": "string",
                    "title": "API Key",
                    "description": "Webthings API Key"
                },
               "debug_mode":{
                   "type": "boolean",
                   "title": "Debug Log",
                    "description":"Enable Debug Log"
               }
           }
        }
    },
    "short_name": "sinope",
    "version": "0.0.1",
    "web_accessible_resources": [
      "css/*.css",
      "images/*.svg",
      "js/*.js",
      "views/*.html"
    ]
  }